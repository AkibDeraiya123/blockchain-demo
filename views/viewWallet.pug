html
 head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  title= "title"
 block content
  a(href="/") Go To Homepage
  br
  a(href="/create") Create Wallet
  br
  a(href="/listWallet") Wallet List
  
  h1= "Your Wallet Details"
  h3="Wallet Name:- " + data.name
  table(style={
   'border': '1px solid black'
  })
   thead
    th="No"
    th="Address"
   tbody
    each val, index in data.addresses
     tr
      td=index+1
      td=val